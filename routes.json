-website/routes.json
{
  "routes": [
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "platformErrorOverrides": [
    {
      "errorType": "NotFound",
      "serve": "/index.html"
    }
  ],
  "defaultHeaders": {
    "cache-control": "must-revalidate, max-age=86400"
  },
  "navigationFallback": {
    "rewrite": "/index.html"
  }
}